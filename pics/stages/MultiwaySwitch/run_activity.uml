@startuml

title MultiWaySwitch run()

start

fork
    :case #1;
    :**split** for Case #1;
    :run **stage** for Case #1;
    if(error) then (handleError)
        if(**exHandler** for Case #1)
        :logError;
        endif
    endif 
fork again
    :...;
fork again
    :case #n;
    :**split** for Case #n;
    :run **stage** for Case #n;
    if(error) then (handleError)
        if(**exHandler** for Case #n)
        :logError;
        endif
    endif 
end fork

if(has errors) 
    :done(errors);
else
    :**combine**;
    :done();
endif
stop

@enduml