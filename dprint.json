{
  "incremental": true,
  "typescript": {
    "lineWidth": 80,
    "indentWidth": 2,
    "semiColons": "asi",
    "quoteStyle": "preferSingle",
    "arrowFunction.useParentheses": "force",
    "functionDeclaration.spaceBeforeParentheses": true
  },
  "json": {
  },
  "markdown": {
  },
  "toml": {
  },
  "dockerfile": {
  },
  "includes": ["**/*.{ts,tsx,js,jsx,cjs,mjs,json,md,toml,dockerfile}"],
  "excludes": [
    "**/node_modules",
    "**/*-lock.json",
    "lib/*",
    "lib_/*"
  ],
  "plugins": [
    "https://plugins.dprint.dev/typescript-0.62.1.wasm",
    "https://plugins.dprint.dev/json-0.14.0.wasm",
    "https://plugins.dprint.dev/markdown-0.12.1.wasm",
    "https://plugins.dprint.dev/toml-0.5.3.wasm",
    "https://plugins.dprint.dev/dockerfile-0.2.1.wasm"
  ]
}
